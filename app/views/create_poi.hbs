{{> mainmenu _id="poi_create" _user=user}}

<section class="ui raised segment">
  <div class="ui grid">
    <div class="ui ten wide column">
      <div class="ui stacked fluid form segment">
        <form action="/poi/create" method="POST" enctype="multipart/form-data">
          <h3 class="ui header">Create Point Of Interest</h3>
            <div class="field">
              <label>Name</label>
              <input value="" type="text" name="name">
            </div>
            <div class="field">
              <label>Coastal Zone</label>
              <input value="" type="text" name="coastalZone">
            </div>
          <div class="field">
            <label>Description</label>
            <textarea rows="4" name="description"></textarea>
          </div>
          <div class="two fields">
          <div class="field">
            <label>Longitude</label>
            <input value="" type="text" name="long">
          </div>
          <div class="field">
            <label>Latitude</label>
            <input value="" type="text" name="lat">
          </div>
          </div>
          <div class="field">
            <label>Select Image</label>
            <input type="file" name="fileUpload" >
          </div>
          <button class="ui blue submit button">Save</button>
        </form>
        {{> error}}
      </div>
    </div>
    <aside class="ui five wide column">
      <img src="../images/homer3.png" class="ui medium image">
    </aside>
  </div>
</section>